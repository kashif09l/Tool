    <script>
        // DOM Elements
        const fileInput = document.getElementById('fileInput');
        const selectFilesBtn = document.getElementById('selectFilesBtn');
        const dropArea = document.getElementById('dropArea');
        const compressionLevel = document.getElementById('compressionLevel');
        const compressionValue = document.getElementById('compressionValue');
        const outputFormat = document.getElementById('outputFormat');
        const resizeToggle = document.getElementById('resizeToggle');
        const widthControl = document.getElementById('widthControl');
        const heightControl = document.getElementById('heightControl');
        const compressBtn = document.getElementById('compressBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const resultsSection = document.getElementById('resultsSection');
        const originalImage = document.getElementById('originalImage');
        const compressedImage = document.getElementById('compressedImage');
        const originalSize = document.getElementById('originalSize');
        const compressedSize = document.getElementById('compressedSize');
        const originalDimensions = document.getElementById('originalDimensions');
        const compressedDimensions = document.getElementById('compressedDimensions');
        const reductionPercent = document.getElementById('reductionPercent');
        const downloadBtn = document.getElementById('downloadBtn');
        
        // Current file being processed
        let currentFile = null;
        let compressedFileBlob = null;
        
        // Update year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Event Listeners
        selectFilesBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        dropArea.addEventListener('dragover', handleDragOver);
        dropArea.addEventListener('drop', handleDrop);
        compressionLevel.addEventListener('input', updateCompressionValue);
        resizeToggle.addEventListener('change', toggleResizeControls);
        compressBtn.addEventListener('click', compressImage);
        downloadBtn.addEventListener('click', downloadCompressedImage);
        
        // Functions
        function handleFileSelect(e) {
            const files = e.target.files;
            if (files.length > 0) {
                processFile(files[0]);
            }
        }
        
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            dropArea.style.backgroundColor = 'rgba(66, 133, 244, 0.1)';
        }
        
        function handleDrop(e) {
            e.preventDefault();
            e.stopPropagation();
            dropArea.style.backgroundColor = '';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                processFile(files[0]);
            }
        }
        
        function updateCompressionValue() {
            compressionValue.textContent = `${compressionLevel.value}%`;
        }
        
        function toggleResizeControls() {
            const value = resizeToggle.value;
            widthControl.style.display = (value === 'width' || value === 'both') ? 'block' : 'none';
            heightControl.style.display = (value === 'height' || value === 'both') ? 'block' : 'none';
        }
        
        function processFile(file) {
            // Check if file is an image
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPEG, PNG, etc.)');
                return;
            }
            
            currentFile = file;
            compressBtn.disabled = false;
            
            // Display original image info
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage.src = e.target.result;
                
                // Get image dimensions
                const img = new Image();
                img.onload = function() {
                    originalDimensions.textContent = `${img.width} √ó ${img.height}`;
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
            
            originalSize.textContent = formatFileSize(file.size);
        }
        
        async function compressImage() {
            if (!currentFile) return;
            
            // Show loading spinner
            loadingSpinner.style.display = 'block';
            compressBtn.disabled = true;
            resultsSection.style.display = 'none';
            
            // Simulate compression (in a real app, you would use actual compression libraries)
            // Here we're just creating a smaller version of the image for demonstration
            setTimeout(() => {
                const quality = parseInt(compressionLevel.value) / 100;
                const img = new Image();
                
                img.onload = function() {
                    // Apply resizing if needed
                    let targetWidth = img.width;
                    let targetHeight = img.height;
                    
                    const resizeOption = resizeToggle.value;
                    if (resizeOption === 'width' || resizeOption === 'both') {
                        targetWidth = parseInt(document.getElementById('targetWidth').value) || img.width;
                    }
                    if (resizeOption === 'height' || resizeOption === 'both') {
                        targetHeight = parseInt(document.getElementById('targetHeight').value) || img.height;
                    }
                    
                    // Create canvas for compression
                    const canvas = document.createElement('canvas');
                    canvas.width = targetWidth;
                    canvas.height = targetHeight;
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, targetWidth, targetHeight);
                    
                    // Determine output format
                    let format = outputFormat.value;
                    if (format === 'auto') {
                        format = currentFile.type.split('/')[1] || 'jpeg';
                    }
                    
                    // Convert to blob
                    canvas.toBlob((blob) => {
                        compressedFileBlob = blob;
                        const compressedUrl = URL.createObjectURL(blob);
                        
                        // Display compressed image
                        compressedImage.src = compressedUrl;
                        compressedSize.textContent = formatFileSize(blob.size);
                        compressedDimensions.textContent = `${targetWidth} √ó ${targetHeight}`;
                        
                        // Calculate reduction
                        const originalSizeBytes = currentFile.size;
                        const compressedSizeBytes = blob.size;
                        const reduction = ((originalSizeBytes - compressedSizeBytes) / originalSizeBytes * 100).toFixed(1);
                        reductionPercent.textContent = `${reduction}%`;
                        
                        // Hide spinner and show results
                        loadingSpinner.style.display = 'none';
                        resultsSection.style.display = 'block';
                        compressBtn.disabled = false;
                        
                        // Scroll to results
                        resultsSection.scrollIntoView({ behavior: 'smooth' });
                    }, `image/${format}`, quality);
                };
                
                img.src = URL.createObjectURL(currentFile);
            }, 1000); // Simulate processing time
        }

        function downloadCompressedImage() {
            if (!compressedFileBlob) return;
            
            const url = URL.createObjectURL(compressedFileBlob);
            const a = document.createElement('a');
            a.href = url;
            
            // Determine file extension
            let extension = 'jpg';
            const format = outputFormat.value;
            if (format !== 'auto') {
                extension = format;
            } else {
                const originalExtension = currentFile.name.split('.').pop().toLowerCase();
                if (['jpeg', 'jpg', 'png', 'webp'].includes(originalExtension)) {
                    extension = originalExtension;
                }
            }
            
            a.download = `compressed-image.${extension}`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // Initialize
        updateCompressionValue();
        toggleResizeControls();
    </script>
    
